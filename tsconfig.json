{
  "compilerOptions": {
    "target": "ES6", // Define o alvo de compatibilidade de ES6 em diante
    "module": "commonjs", // Usado para Node.js
    "outDir": "./dist", // Diretório de saída dos arquivos compilados
    "rootDir": "./src", // Diretório raiz do código TypeScript
    "strict": true, // Ativa verificação estrita
    "esModuleInterop": true, // Necessário para compatibilidade com módulos CommonJS
    "skipLibCheck": true, // Opcional, para ignorar checagens de tipo em arquivos de definição de tipos
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}