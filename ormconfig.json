      "subscribersDir": "src/subscribers"
    }
  },
  {
    "name": "test",
    "type": "sqlite",
    "database": ":memory:",
    "synchronize": true,
    "dropSchema": true,
    "logging": false,
    "entities": [
      "src/entities/*.ts"
    ],
    "migrations": [
      "src/migrations/**/*.ts"
    ],
    "subscribers": [
      "src/subscribers/**/*.ts"
    ],
    "cli": {
      "entitiesDir": "src/entities",
      "migrationsDir": "src/migrations",
      "subscribersDir": "src/subscribers"
    }
  }
